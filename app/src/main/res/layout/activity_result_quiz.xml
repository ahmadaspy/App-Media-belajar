<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultQuiz">
    <TextView
        android:id="@+id/result_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RESULT"
        android:textAlignment="center"
        android:textSize="40sp"
        android:layout_marginTop="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result_txt"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/linear1">

        <TextView
            android:id="@+id/bujur_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jawaban Yang Benar"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/bujurjawaban_txt"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="jawaban"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/salah_txt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Jawaban Yang Salah"
            android:textSize="20sp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/salahjawaban_txt"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="jawaban"
            android:layout_marginLeft="70dp"
            />
    </LinearLayout>
</RelativeLayout>